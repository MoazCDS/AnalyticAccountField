<odoo>
    <!-- Purchase Order -->
    <record id="purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">account.analytic.purchase.order</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[.//field[@name='date_planned']]" position="after">
                    <field name="analytic_account"/>
            </xpath>
        </field>
    </record>

    <!-- Sale Order -->
    <record id="sale_order_form_inherit" model="ir.ui.view">
        <field name="name">account.analytic.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="analytic_account"/>
            </xpath>
        </field>
    </record>

    <!-- Account Move -->
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.analytic.account.move</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='purchase_vendor_bill_id']" position="after">
                <field name="analytic_account" readonly="state != 'draft'"/>
            </xpath>
        </field>
    </record>
</odoo>