<odoo>
    <!--===========================PURCHASE ORDER=================================-->
    <record id="account_analytic_purchase_order" model="ir.ui.view">
        <field name="name">account.analytic.purchase.order</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[.//field[@name='date_planned']]" position="after">
                    <field name="analytic_account"/>
            </xpath>
        </field>
    </record>
    <!--===========================SALE ORDER=================================-->
    <record id="account_analytic_sale_order" model="ir.ui.view">
        <field name="name">account.analytic.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="analytic_account"/>
            </xpath>
        </field>
    </record>
    <!--===========================ACCOUNT MOVE=================================-->
    <record id="account_analytic_account_move" model="ir.ui.view">
        <field name="name">account.analytic.account.move</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='purchase_vendor_bill_id']" position="after">
                <field name="analytic_account"/>
            </xpath>
        </field>
    </record>
</odoo>